{
    "name": "nick-site",
    "version": "1.0.0",
    "description": "My website",
    "main": "./src/entry.js",
    "scripts": {
        "back": "nodemon --ignore ./webpack.config.js --ignore src/ --ignore dist/ --delay 2 ./server.js",
        "build": "NODE_ENV=production webpack",
        "prettier-check": "prettier -c \"**/*.js\"",
        "dev": "concurrently npm:back npm:front",
        "eslint": "eslint ./src",
        "prettier-fix": "prettier --write \"**/*.js\"",
        "front": "webpack --watch",
        "heroku-postbuild": "npm run knex-migrate-prod && npm run build",
        "knex-migrate-prod": "knex migrate:latest --env production",
        "knex-migrate-stage": "knex migrate:latest --env staging --verbose",
        "knex-migrate-stage-down": "knex migrate:down --env staging",
        "knex-new-migration": "knex migrate:make name_goes_here",
        "server": "node ./server.js",
        "sim-deploy": "rm -rf node_modules && npm install && npm run heroku-postbuild && npm run server",
        "start": "webpack-dev-server --inline --colors --history-api-fallback",
        "test": "npm run prettier-check",
        "update-pokemon-moves": "wget -O ./src/components/pokemon/showdown/moves.js https://raw.githubusercontent.com/smogon/pokemon-showdown/master/data/moves.js",
        "update-pokemon-pokedex": "wget -O ./src/components/pokemon/showdown/pokedex.js https://raw.githubusercontent.com/smogon/pokemon-showdown/master/data/pokedex.js",
        "update-pokemon": "npm run update-pokemon-pokedex && npm run update-pokemon-moves"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nick-ng/nick-site.git"
    },
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/nick-ng/nick-site/issues"
    },
    "homepage": "https://github.com/nick-ng/nick-site",
    "dependencies": {
        "@babel/core": "^7.8.7",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.8.3",
        "@babel/preset-env": "^7.8.7",
        "@babel/preset-react": "^7.8.3",
        "@babel/runtime": "^7.8.7",
        "@loadable/component": "^5.12.0",
        "babel-loader": "^8.0.6",
        "classnames": "^2.2.6",
        "compression": "^1.6.2",
        "concurrently": "^5.1.0",
        "contentful": "^7.13.0",
        "css-loader": "^3.4.2",
        "cubejs": "^1.3.2",
        "dotenv": "^8.2.0",
        "express": "^4.14.1",
        "html-webpack-plugin": "^3.2.0",
        "knex": "^0.20.8",
        "lodash": "^4.17.15",
        "moment": "^2.24.0",
        "pg": "^7.17.1",
        "react": "^16.0.0",
        "react-dom": "^16.0.0",
        "react-markdown": "^4.3.1",
        "react-router-dom": "^5.1.2",
        "style-loader": "^0.13.1",
        "styled-components": "^5.1.0",
        "webpack": "^4.42.0",
        "webpack-cli": "^3.3.11"
    },
    "devDependencies": {
        "nodemon": "^2.0.2",
        "prettier": "1.19.1"
    }
}
